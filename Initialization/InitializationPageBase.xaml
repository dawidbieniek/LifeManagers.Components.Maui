<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LifeManagers.Components.Maui.Initialization.InitializationPageBase"
			 x:Name="this"
             Title="InitializationPageBase">
	<Grid>
		<VerticalStackLayout VerticalOptions="CenterAndExpand">
			<Label 
                Text="Loading..."
				FontSize="Title"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
			<Label 
                Text="{Binding LoadingDetailsText, Source={x:Reference this}}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
		</VerticalStackLayout>
	</Grid>
</ContentPage>